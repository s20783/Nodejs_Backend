<!DOCTYPE html>
<%- include('../../fragments/header.ejs') %>
<main>
    <script type="application/javascript" src="/js/validationKlubZawodnikForm.js"></script>
    <h2><%= __('klub_zawodnik.form.list.pageTitle') %></h2>
    <table class="table-list">
        <thead>
        <tr>
            <th><%= __('kluby.fields.Nazwa') %></th>
            <th><%= __('kluby.fields.Skrot') %></th>
            <th><%= __('zawodnicy.fields.Imie') %></th>
            <th><%= __('zawodnicy.fields.Nazwisko') %></th>
            <th><%= __('list.actions.title') %></th>
        </tr>
        </thead>
        <tbody>
        <% for(let kz of kzy) { %>
            <tr>
                <td><%= kz.Nazwa %></td>
                <td><%= kz.Skrot %></td>
                <td><%= kz.Imie %></td>
                <td><%= kz.Nazwisko %></td>
                <td>
                    <ul class="list-actions">
                        <li><a href="/klub_zawodnik/details/<%= kz.ID_klub %>/<%= kz.ID_zawodnik %>" class="list-actions-button-details"><%= __('list.actions.details') %></a></li>
                    </ul>
                </td>
            </tr>
        <% } %>
        </tbody>
    </table>
    <% if(loggedUser) { %>
        <form class="form">
            <div class="form-buttons">
                <a href="/klub_zawodnik/add" class="button-add"><%= __('klub_zawodnik.form.list.btnLabel') %></a>
            </div>
        </form>
    <% } %>
</main>
<%- include('../../fragments/footer.ejs') %>
</html>